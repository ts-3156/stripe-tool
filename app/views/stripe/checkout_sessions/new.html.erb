<% content_for :title, 'Buy cool new product' %>
<section>
  <h3>Hello, <%= @user&.email_address %></h3>

  <div class="apple">Apple</div>
  <div class="banana">Banana</div>

  <div class="product">
    <%= image_tag "book.png", alt: "The cover of Stubborn Attachments" %>
    <div class="description">
      <h3>Stubborn Attachments</h3>
      <h5>$20.00</h5>
    </div>
  </div>
  <%= form_tag stripe_checkout_sessions_path(mode: "payment"), method: :post do %>
    <button type="submit" id="checkout-button">Payment</button>
  <% end %>

  <%= form_tag stripe_checkout_sessions_path(mode: "subscription"), method: :post do %>
    <button type="submit" id="checkout-button">Subscription</button>
  <% end %>

  <%= form_tag stripe_checkout_sessions_path(mode: "subscription", trial_period: 3), method: :post do %>
    <button type="submit" id="checkout-button">Subscription with free trial</button>
  <% end %>

  <%= form_tag stripe_checkout_sessions_path(mode: "setup"), method: :post do %>
    <button type="submit" id="checkout-button">Setup</button>
  <% end %>
</section>
